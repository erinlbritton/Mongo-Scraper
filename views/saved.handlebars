<div id="articles">
    {{#each articles}}
        {{#if saved}}
        <div class="well">
            <div class="row">
                <div class="col-md-3">
                    <img class="img-responsive" src="{{imageURL}}">
                </div>
                <div class="col-md-9">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="article-title"><a href="{{vizURL}}">{{title}}</a> | </div>
                            <div class="article-date"> {{date}}</div> 
                            <button class="btn btn-primary pull-right">Comment</button>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p>
                                {{summary}}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/if}}
    {{/each}}
</div>